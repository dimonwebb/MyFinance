<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.dmitry_shaposhnikov.myfinance.MainActivity">

    <com.github.mikephil.charting.charts.BarChart
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:id="@+id/stats_graph"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp" />

    <CheckBox
        android:id="@+id/group_by_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="58dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="4dp"
        android:checked="true"
        android:theme="@style/MyCheckBox"
        app:layout_constraintTop_toBottomOf="@+id/stats_graph"
        android:layout_marginStart="58dp" />

    <TextView
        android:id="@+id/group_by_day_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Группировать по дням"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@+id/group_by_day"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.048"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/stats_graph"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/budget_table"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toBottomOf="@+id/group_by_day_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center"
            android:padding="0.5dp"
            android:background="@drawable/border">
            <TextView
                android:layout_width="fill_parent"
                android:text="Месяц"
                android:textStyle="bold"
                android:padding="3dip"
                android:gravity="center"
                android:background="@drawable/border"/>
            <TextView
                android:layout_width="fill_parent"
                android:text="Приход"
                android:textStyle="bold"
                android:padding="3dip"
                android:gravity="center"
                android:background="@drawable/border"/>
            <TextView
                android:layout_width="fill_parent"
                android:text="Расход"
                android:textStyle="bold"
                android:padding="3dip"
                android:gravity="center"
                android:background="@drawable/border"/>
            <TextView
                android:layout_width="fill_parent"
                android:text="Сальдо"
                android:textStyle="bold"
                android:padding="3dip"
                android:gravity="center"
                android:background="@drawable/border"/>
        </TableRow>

    </TableLayout>

</android.support.constraint.ConstraintLayout>
